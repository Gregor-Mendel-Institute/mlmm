citHeader("To cite the mlmm function in publications, use:")

citEntry(entry = "Article",
  title        = "An efficient multi-locus mixed-model approach for genome-wide association studies in structured populations",
  author       = personList(as.person("Segura, Vilhjalmsson et al")),
  journal      = "Nature Genetics",
  year         = "2012",
  volume       = "44",
  pages        = "825--830",
  url          = "http://www.nature.com/ng/journal/v44/n7/full/ng.2314.html",

  textVersion  =
  paste("Segura, Vilhjalmsson et al (2012).",
        "An efficient multi-locus mixed-model approach for genome-wide association studies in structured populations.",
        "Nature Genetics, 44, 825-830.",
        "URL http://www.nature.com/ng/journal/v44/n7/full/ng.2314.html.")
)
